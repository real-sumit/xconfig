#!/usr/bin/sh

ssh-keygen -t rsa -b 4096 -C "" 2>/dev/null
eval "$(ssh-agent -s)"
ssh-add ~/.ssh/id_rsa
echo "#####################################################"
echo "#                                                   #"
echo "#                Your Public SSH Key                #"
echo "#                                                   #"
echo "#####################################################"
cat ~/.ssh/id_rsa.pub
